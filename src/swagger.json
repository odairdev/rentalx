{
  "openapi": "3.0.0",
  "info": {
    "title": "RentalX Documentation",
    "description": "This an API for car rentals.",
    "version": "1.0.0",
    "contact": {
      "email": "rentalx@example.com"
    }
  },
  "paths": {
    "/categories": {
      "post": {
        "tags": ["Category"],
        "summary": "Create a car category",
        "description": "Create a new car category",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "description": {
                    "type": "string"
                  }
                },
                "example": {
                  "name": "SUV",
                  "description": "SUV car category description"
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Created"
          },
          "400": {
            "description": "Category already exists"
          }
        }
      },
      "get": {
        "tags": ["Category"],
        "summary": "List all categories",
        "description": "List all car categories in database.",
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema":{
                  "type":"array",
                  "items": {
                    "type":"object",
                    "properties":{
                      "name": {
                        "type":"string"
                      },
                      "description": {
                        "type":"string"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}